#:import ScrollEffect  kivy.effects.scroll.ScrollEffect
#:import hex_color kivy.utils.get_color_from_hex

<Card>:
    radius: 12
    orientation: 'vertical'
    elevation: 5
    padding: [0, 0, 0, 24]
    on_release:
        app.change_screen(root.title_text)

    MDBoxLayout:
        orientation: 'vertical'
        radius: [12, 12, 0, 0]
        size_hint: 1, 3
        md_bg_color: root.background_color
        Image:
            source: root.image_source

    MDBoxLayout:
        padding: [12, 0, 12, 0]
        orientation: 'vertical'
        MDLabel:
            text: root.title_text
            font_size: "15sp"
            adaptive_height: True
            font_name: "MPoppins"

        MDLabel:
            text: root.description
            adaptive_height: True
            font_name: "RPoppins"
            font_size: "10sp"

<SearchBar>:
    size_hint: .4, .089
    pos_hint: {'center_x': .75, 'center_y': .9}
    elevation: 0
    md_bg_color: .1, .1, .1, .05
    radius: [5]

    Image:
        source: 'assets/images/search icon.png'
        radius: [10]
        size_hint: .9, .9
        pos_hint: {'center_x': .03, 'center_y': .5}
    TextInput:
        hint_text: "Search..."
        size_hint: .8, None
        pos_hint: {'center_x': .48, 'center_y': .5}
        height: self.minimum_height
        cursor_width: "2sp"
        cursor_color: 0, 0, 0, .5
        multiline: False
        background_color: 0, 0, 0, 0
        padding: 15
        font_name: "MPoppins"
        font_size: "13sp"
    MDIconButton:
        pos_hint: {'center_x': .92, 'center_y': .5}
        icon: 'microphone'
        theme_text_color: "Custom"
        text_color: .5, .5, .5, 1


<SubjectListScreen>:
    name: 'subject-list'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: "ALL SUBJECTS"
            font_name: "BPoppins"
            font_size: '20sp'
            pos_hint: {'center_x': .2, 'center_y': .9}
            halign: 'center'
            line_height: 1.1
        MDLabel:
            text: "Click on a subject to learn"
            font_name: "MPoppins"
            font_size: '10sp'
            pos_hint: {'center_x': .2, 'center_y': .85}
            halign: 'center'
            line_height: 1.1

        SearchBar:
            id: search

        ScrollView:
            size_hint: .95, .8
            md_bg_color: .1, .1, .1, 1
            bar_width: 0
            effect_cls: ScrollEffect

            GridLayout:
                id: subject_list
                rows: 1
                row_default_height: 240
                col_default_width: 168
#                size_hint_y: None
                padding: 20, 40
                spacing: 20, 40

                Card:
                    background_color: hex_color('#ff9f52')
                    image_source: "assets/images/all subjects/Finance.png"
                    title_text: "Financial Literacy"
                    description: "Learn how to manage and use money effectively."
                Card:
                    background_color: hex_color('#00a18d')
                    image_source: "assets/images/all subjects/Math.png"
                    title_text: "Mathematics"
                    description: "Learn how to use numbers and how to solve problems."
                Card:
                    background_color: hex_color('#efc059')
                    image_source: "assets/images/all subjects/Science.png"
                    title_text: "Science"
                    description: "Learn how to use scientific principles and methods."
                Card:
                    background_color: hex_color('#f66747')
                    image_source: "assets/images/all subjects/Conservation.png"
                    title_text: "Conservation"
                    description: "Learn methods of conservation."


