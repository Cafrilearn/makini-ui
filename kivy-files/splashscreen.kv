<SplashScreen>:
    name: 'SplashScreen'


    MDFloatLayout:
        md_bg_color: hex_color('#FFFFFF')

        MDFloatLayout:
            id: label
            pos_hint: {'center_x': .4, 'center_y': .5}

            MDLabel:
                text: "MARA"
                font_name: "BPoppins"
                font_size: "60sp"
                theme_style: "Custom"
                color: hex_color("#ff7400")
                pos_hint: {"center_x": 1, "center_y": .55}

            MDLabel:
                text: "ACADEMY"
                font_name: "BPoppins"
                font_size: "50sp"
                pos_hint: {"center_x": 1, "center_y": .45}

        MDFloatLayout:
            pos_hint: {'center_x': .2}
            size_hint: .7, 1
            md_bg_color: 1, 1, 1, 1

        Image:
            id: animated_image
            source: "assets/logo/mara.png"
            pos_hint: {"center_x": .6, "center_y": .5}
            size_hint: .6, .6
