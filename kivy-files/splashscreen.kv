    MDBoxLayout:
        orientation: "horizontal"

        MDFloatLayout:
            size_hint_x: .5
            md_bg_color: hex_color('#00a18d')

            Image:
                id: animated_image
                source: "assets/logo/makini.png"
                pos_hint: {"center_x": .5, "center_y": .8}
                size_hint: .5, .5

            MDLabel:
                text: "MARA"
                font_name: "BPoppins"
                halign: "center"
                font_size: "40sp"
                theme_style: "Custom"
                color: hex_color("#ffffff")
                pos_hint: {"center_x": .83, "center_y": .35}

        MDFloatLayout:
            size_hint_x: .5
            md_bg_color: 1, 1, 1, 1

            MDLabel:
                text: "KIDS"
                font_name: "BPoppins"
                halign: "center"
                font_size: "40sp"
                theme_style: "Custom"
                color: hex_color("#00a18d")
                pos_hint: {"center_x": .13, "center_y": .35}

            Image:
                id: animated_image
                source: "assets/logo/mara.png"
                pos_hint: {"center_x": .5, "center_y": .8}
                size_hint: .8, .8

            MDFillRoundFlatButton:
                text: "Let's go"
                font_name: "BPoppins"
                font_size: '15sp'
                size_hint: .3, .09
                md_bg_color : hex_color("#ff7400")
                pos_hint: {'center_x': 0, 'center_y': .15}
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'welcome'
