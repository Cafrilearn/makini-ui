#:import hex_color kivy.utils.get_color_from_hex

<ConversationScreen>:
    name: 'ConversationScreen'

    MDFloatLayout:
        md_bg_color: hex_color('#00a18d')

        MDRectangleFlatIconButton:
            icon: "keyboard-backspace"
            pos_hint: {"center_x": .1, "center_y": .85}
            text: "Back"
            theme_text_color: "Custom"
            text_color: 1, 1, 1 ,1
            line_color: hex_color('#00a18d')
            font_name: "MPoppins"
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, 1
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'subject-list'

        Image:
            id: animated_image
            source: "assets/images/mic.png"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .5, .5

        MDIconButton:
            id: mic
            pos_hint: {'center_x': .5, 'center_y': .1}
            icon: 'microphone'
            user_font_size: '30dp'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_release:
                root.start_listening(self)

        MDLabel:
            id: instruction
            halign: "center"
            text: "Press to speak"
            font_size: '20sp'
            theme_text_color: "Custom"
            adaptive_size: True
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': .5, 'center_y': .18}
            font_name: "RPoppins"